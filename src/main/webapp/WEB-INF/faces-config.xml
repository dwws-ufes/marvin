<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">
	<application>
		<!-- Defines the resource bundle that contains the standard JSF messages 
			(overriding the ones provided). -->
		<message-bundle>br.ufes.informatica.marvin.faces</message-bundle>

		<!-- Loads resource bundles for i18n messages and assigns names to them. -->
		<resource-bundle>
			<base-name>br.ufes.informatica.marvin.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>br.ufes.informatica.marvin.admin.view.messages</base-name>
			<var>msgsAdmin</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>br.ufes.informatica.marvin.core.view.messages</base-name>
			<var>msgsCore</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>br.ufes.informatica.marvin.research.view.messages</base-name>
			<var>msgsResearch</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>br.ufes.informatica.marvin.academicControl.view.messages</base-name>
			<var>msgsAcademicControl</var>
		</resource-bundle>

		<!-- Defines the default locale. -->
		<locale-config>
			<default-locale>en-US</default-locale>
		</locale-config>
	</application>
</faces-config>
